  .main-content {
    padding: 0 var(--space-sm);
  }
  
  .classroom-section,
  .auth-section {
    padding: var(--space-md);
  }
  
  .section-header h1 {
    font-size: 2rem;
  }
  
  .role-cards {
    gap: var(--space-sm);
  }
  
  .role-card {
    padding: var(--space-md);
  }
  
  .classroom-form-row {
    flex-direction: column;
    gap: var(--space-sm);
    padding: 0 var(--space-sm);
  }
  
  .classroom-options {
    grid-template-columns: 1fr;
    gap: var(--space-md);
    padding: 0 var(--space-sm);
  }
  
  .enhanced-option {
    flex-direction: column;
    text-align: center;
    min-height: 140px;
    padding: var(--space-md);
  }
  
  .option-icon-container {
    margin-bottom: var(--space-sm);
  }
  
  .option-arrow {
    display: none;
  }
  
  .grid-cols-2,
  .grid-cols-3,
  .grid-cols-4 {
    grid-template-columns: 1fr;
  }
  
  .classroom-content-modern {
    padding: var(--space-sm);
  }
  
  .header-content {
    flex-direction: column;
    gap: var(--space-sm);
    align-items: flex-start;
  }
  
  .welcome-title {
    font-size: 1.5rem;
  }
  
  .details-grid {
    grid-template-columns: 1fr;
  }
  
  .actions-horizontal {
    grid-template-columns: 1fr;
  }
  
  .action-card-modern {
    padding: var(--space-sm);
  }
  
  .class-details-section,
  .actions-section {
    padding: var(--space-md);
  }
}

@media (max-width: 480px) {
  .landing-header {
    padding: var(--space-xs) var(--space-sm);
  }
  
  .site-title {
    font-size: 1.25rem;
  }
  
  .classroom-section,
  .auth-section {
    padding: var(--space-sm);
  }
  
  .section-header h1 {
    font-size: 1.75rem;
  }
  
  .enhanced-option {
    padding: var(--space-sm);
  }
  
  .option-title {
    font-size: 1rem;
  }
  
  .option-description {
    font-size: 0.8rem;
  }
  
  .classroom-header-modern {
    padding: var(--space-sm);
  }
  
  .welcome-title {
    font-size: 1.25rem;
  }
  
  .action-title {
    font-size: 1rem;
  }
  
  .action-icon-wrapper {
    width: 40px;
    height: 40px;
  }
}

