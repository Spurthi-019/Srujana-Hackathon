.student-card:hover,
.teacher-card:hover {
  background: rgba(0, 123, 255, 0.02);
}

.role-card h3 {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: var(--space-xs);
}

.role-card p {
  color: var(--text-muted);
  margin-bottom: var(--space-sm);
}

.role-features {
