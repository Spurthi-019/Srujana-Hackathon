/* Premium Navigation */
.nav-premium {
  position: relative;
  z-index: 100;
  background: rgba(255, 255, 255, 0.08);
  -webkit-backdrop-filter: var(--backdrop-blur-lg);
  backdrop-filter: var(--backdrop-blur-lg);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  padding: var(--space-4) 0;
}

.nav-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo-premium {
  font-family: var(--font-display);
  font-size: 1.75rem;
  font-weight: 800;
  background: linear-gradient(135deg, var(--neutral-0) 0%, rgba(255, 255, 255, 0.8) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-decoration: none;
  transition: all var(--duration-300) var(--ease-out);
}

.logo-premium:hover {
  transform: scale(1.05);
  filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.5));
}

/* Premium Buttons */
.btn-premium {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  padding: var(--space-3) var(--space-6);
  border-radius: var(--radius-xl);
  font-size: 0.875rem;
  font-weight: 600;
  font-family: var(--font-body);
  text-decoration: none;
  border: none;
  cursor: pointer;
  transition: all var(--duration-200) var(--ease-out);
  position: relative;
  overflow: hidden;
  min-height: 44px;
  white-space: nowrap;
  transform: translateZ(0);
}

.btn-premium::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left var(--duration-500) var(--ease-out);
}

.btn-premium:hover::before {
  left: 100%;
}

.btn-primary {
  background: var(--gradient-primary);
  color: var(--neutral-0);
  box-shadow: var(--shadow-lg);
}

.btn-primary:hover {
  transform: translateY(-2px) scale(1.02);
  box-shadow: var(--shadow-xl);
}

.btn-glass {
  background: rgba(255, 255, 255, 0.1);
  color: var(--neutral-0);
  border: 1px solid rgba(255, 255, 255, 0.2);
  -webkit-backdrop-filter: var(--backdrop-blur-md);
  backdrop-filter: var(--backdrop-blur-md);
}

.btn-glass:hover {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(255, 255, 255, 0.3);
  transform: translateY(-2px);
  box-shadow: var(--shadow-glow);
}

.btn-ghost {
  background: transparent;
  color: rgba(255, 255, 255, 0.9);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.btn-ghost:hover {
  background: rgba(255, 255, 255, 0.1);
  color: var(--neutral-0);
  border-color: rgba(255, 255, 255, 0.4);
}

/* Premium Form Elements */
.form-premium {
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

.form-group-premium {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.form-label-premium {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--neutral-0);
  font-family: var(--font-body);
  letter-spacing: 0.025em;
}

.form-input-premium {
  padding: var(--space-4) var(--space-5);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-xl);
  font-size: 1rem;
  font-family: var(--font-body);
  background: rgba(255, 255, 255, 0.08);
  color: var(--neutral-0);
  -webkit-backdrop-filter: var(--backdrop-blur-sm);
  backdrop-filter: var(--backdrop-blur-sm);
  transition: all var(--duration-200) var(--ease-out);
}

.form-input-premium:focus {
  outline: none;
  border-color: rgba(255, 255, 255, 0.4);
  background: rgba(255, 255, 255, 0.12);
  box-shadow: 
    0 0 0 3px rgba(255, 255, 255, 0.1),
    var(--shadow-glow);
  transform: translateY(-1px);
}

.form-input-premium::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

/* Premium Select Elements */
.select-premium {
  position: relative;
  display: inline-block;
  width: 100%;
}

.select-premium select {
  width: 100%;
  padding: var(--space-4) var(--space-12) var(--space-4) var(--space-5);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-xl);
  font-size: 1rem;
  font-family: var(--font-body);
  font-weight: 500;
  background: rgba(255, 255, 255, 0.08);
  color: var(--text-primary);
  -webkit-backdrop-filter: var(--backdrop-blur-sm);
  backdrop-filter: var(--backdrop-blur-sm);
  transition: all var(--duration-200) var(--ease-out);
  appearance: none;
  cursor: pointer;
}

.select-premium select:focus {
  outline: none;
  border-color: rgba(255, 255, 255, 0.4);
  background: rgba(255, 255, 255, 0.12);
  box-shadow: 
    0 0 0 3px rgba(255, 255, 255, 0.1),
    var(--shadow-glow);
  transform: translateY(-1px);
}

.select-premium select:hover {
  border-color: rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.1);
}

.select-premium::after {
  content: '';
  position: absolute;
  top: 50%;
  right: var(--space-4);
  transform: translateY(-50%);
  width: 0;
  height: 0;
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-top: 8px solid var(--text-secondary);
  pointer-events: none;
  transition: all var(--duration-200) var(--ease-out);
}

.select-premium:hover::after {
  border-top-color: var(--text-primary);
}

.select-premium select:focus + .select-premium::after,
.select-premium:focus-within::after {
  border-top-color: var(--text-primary);
  transform: translateY(-50%) rotate(180deg);
}

/* Premium Select Options Styling */
.select-premium select option {
  background: var(--surface-card);
  color: var(--text-primary);
  padding: var(--space-3);
  border: none;
}

[data-theme="dark"] .select-premium select option {
  background: #1a1a1a;
  color: var(--text-primary);
}

@media (prefers-color-scheme: dark) {
  :root:not([data-theme="light"]) .select-premium select option {
    background: #1a1a1a;
    color: var(--text-primary);
  }
}

/* Premium Select with Icon */
.select-premium.with-icon {
  position: relative;
}

.select-premium.with-icon .select-icon {
  position: absolute;
  left: var(--space-4);
  top: 50%;
  transform: translateY(-50%);
  width: 20px;
  height: 20px;
  color: var(--text-secondary);
  pointer-events: none;
  z-index: 2;
}

.select-premium.with-icon select {
  padding-left: var(--space-12);
}

/* Premium Multi-Select */
.select-premium.multi select {
  min-height: 120px;
  resize: vertical;
}

.select-premium.multi select option:checked {
  background: var(--gradient-primary);
  color: var(--neutral-0);
}

/* Premium Select Validation States */
.select-premium.error select {
  border-color: var(--accent-rose);
  background: rgba(244, 63, 94, 0.1);
}

.select-premium.error::after {
  border-top-color: var(--accent-rose);
}

.select-premium.success select {
  border-color: var(--accent-emerald);
  background: rgba(16, 185, 129, 0.1);
}

.select-premium.success::after {
  border-top-color: var(--accent-emerald);
}

/* Floating Shapes Animation System */
.floating-shapes {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
  overflow: hidden;
}

.shape {
  position: absolute;
  opacity: 0.1;
  transition: opacity var(--duration-500) var(--ease-out);
}

[data-theme="dark"] .shape {
  opacity: 0.15;
}

@media (prefers-color-scheme: dark) {
  :root:not([data-theme="light"]) .shape {
    opacity: 0.15;
  }
}

.shape-1 {
  width: 200px;
  height: 200px;
  background: linear-gradient(135deg, var(--primary-400), var(--primary-600));
  border-radius: 50%;
  top: 10%;
  left: 15%;
  animation: float 8s ease-in-out infinite;
}

.shape-2 {
  width: 150px;
  height: 150px;
  background: linear-gradient(135deg, var(--accent-purple), var(--accent-cyan));
  border-radius: 20px;
  top: 60%;
  right: 20%;
  animation: float 10s ease-in-out infinite reverse;
  animation-delay: -3s;
}

.shape-3 {
  width: 100px;
  height: 100px;
  background: linear-gradient(135deg, var(--accent-amber), var(--accent-rose));
  clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
  bottom: 20%;
  left: 25%;
  animation: float 12s ease-in-out infinite;
  animation-delay: -6s;
}

/* Particles System */
.particles-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 2;
  overflow: hidden;
}

.particle {
  position: absolute;
  width: 4px;
  height: 4px;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  animation: particleFloat 15s linear infinite;
}

[data-theme="dark"] .particle {
  background: rgba(168, 85, 247, 0.8);
}

@media (prefers-color-scheme: dark) {
  :root:not([data-theme="light"]) .particle {
    background: rgba(168, 85, 247, 0.8);
  }
}

.particle:nth-child(1) {
  top: 20%;
  left: 10%;
  animation-delay: 0s;
  animation-duration: 12s;
}

.particle:nth-child(2) {
  top: 80%;
  left: 80%;
  animation-delay: -3s;
  animation-duration: 18s;
}

.particle:nth-child(3) {
  top: 40%;
  left: 60%;
  animation-delay: -6s;
  animation-duration: 14s;
}

.particle:nth-child(4) {
  top: 60%;
  left: 20%;
  animation-delay: -9s;
  animation-duration: 16s;
}

.particle:nth-child(5) {
  top: 10%;
  left: 90%;
  animation-delay: -12s;
  animation-duration: 20s;
}

/* Enhanced Animation Keyframes */
@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  25% {
    transform: translateY(-20px) rotate(5deg);
  }
  50% {
    transform: translateY(-40px) rotate(0deg);
  }
  75% {
    transform: translateY(-20px) rotate(-5deg);
  }
}

@keyframes particleFloat {
  0% {
    transform: translateY(0px) translateX(0px) scale(1);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    transform: translateY(-100vh) translateX(50px) scale(0);
    opacity: 0;
  }
}

@keyframes backgroundPulse {
  0% {
    opacity: 0.8;
    transform: scale(1);
  }
  50% {
    opacity: 0.9;
    transform: scale(1.05);
  }
  100% {
    opacity: 0.8;
    transform: scale(1);
  }
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

@keyframes pulseSubtle {
  0%, 100% {
    opacity: 0.8;
  }
  50% {
    opacity: 1;
  }
}

@keyframes rotateSlow {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* Premium Loading States */
.loading-shimmer {
  background: linear-gradient(
    90deg,
    rgba(255, 255, 255, 0.05) 25%,
    rgba(255, 255, 255, 0.15) 50%,
    rgba(255, 255, 255, 0.05) 75%
  );
  background-size: 200% 100%;
  animation: shimmer 2s ease-in-out infinite;
}

/* Premium Content Sections */
.hero-content {
  position: relative;
  z-index: 10;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: var(--space-16) 0;
}

.hero-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-16);
  align-items: center;
  max-width: 1400px;
  margin: 0 auto;
}

.hero-text {
  text-align: left;
}

.hero-title {
  font-family: var(--font-display);
  font-size: 3.5rem;
  font-weight: 800;
  line-height: 1.1;
  margin-bottom: var(--space-6);
  background: linear-gradient(135deg, var(--neutral-0) 0%, rgba(255, 255, 255, 0.8) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.02em;
}

.hero-subtitle {
  font-size: 1.25rem;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: var(--space-8);
