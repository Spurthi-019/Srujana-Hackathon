  border-color: var(--border-focus);
  box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
  transform: translateY(-1px);
}

.classroom-input:hover,
.teacher-code-input:hover {
  border-color: var(--border-focus);
}

.classroom-input::placeholder,
.teacher-code-input::placeholder {
  color: var(--text-muted);
}

.classroom-options {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--space-lg);
  max-width: 1000px;
  margin: 0 auto;
}

.enhanced-option,
.classroom-option {
  background: var(--bg-card);
  padding: var(--space-lg);
  border-radius: var(--radius-lg);
  cursor: pointer;
  box-shadow: var(--shadow-card);
  transition: all var(--transition-smooth);
  border: 1px solid var(--border-light);
  display: flex;
  align-items: center;
  gap: var(--space-md);
  min-height: 120px;
}

.enhanced-option:hover,
.classroom-option:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-hover);
  border-color: var(--border-focus);
  background: rgba(0, 123, 255, 0.02);
}

.option-icon-container {
  flex-shrink: 0;
  width: 56px;
  height: 56px;
  border-radius: var(--radius-md);
  background: rgba(0, 123, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--transition-smooth);
}

.enhanced-option:hover .option-icon-container {
  background: rgba(0, 123, 255, 0.15);
  transform: scale(1.05);
}

.option-icon {
  width: 28px;
  height: 28px;
  opacity: 0.8;
  transition: all var(--transition-smooth);
}

.enhanced-option:hover .option-icon {
  opacity: 1;
  transform: scale(1.1);
}

.option-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.option-title {
  font-size: 1.125rem;
  font-weight: 600;
  margin: 0;
  color: var(--text-color);
  transition: all var(--transition-smooth);
}

.enhanced-option:hover .option-title {
  color: var(--accent-color);
}

.option-description {
  font-size: 0.875rem;
  color: var(--text-muted);
  margin: 0;
  line-height: 1.4;
  transition: all var(--transition-smooth);
}

.enhanced-option:hover .option-description {
  color: var(--text-secondary);
}

.option-arrow {
  flex-shrink: 0;
  opacity: 0.6;
  transition: all var(--transition-smooth);
  color: var(--text-muted);
  font-size: 1.25rem;
}

.enhanced-option:hover .option-arrow {
  opacity: 1;
  color: var(--accent-color);
  transform: translateX(4px);
}

/* Classroom Option Page */
.classroom-option-page {
  padding: var(--space-xl);
  text-align: center;
}

/* Animation Keyframes */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.fade-in {
  animation: fadeIn 0.3s ease-out forwards;
}

/* Animation delays for stagger effect */
.option-0 { animation-delay: 0.1s; }
.option-1 { animation-delay: 0.2s; }
.option-2 { animation-delay: 0.3s; }
.option-3 { animation-delay: 0.4s; }

