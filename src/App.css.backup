  text-align: center;
}

.auth-header {
  margin-bottom: var(--space-xl);
}

.auth-header h3 {
  color: var(--text-color);
  margin-bottom: var(--space-sm);
}

.auth-header p {
  color: var(--text-muted);
}

.auth-toggle {
