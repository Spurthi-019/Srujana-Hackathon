}

.option-card-premium::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
}

.option-card-premium::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left var(--duration-700) var(--ease-out);
}

.option-card-premium:hover {
  transform: translateY(-8px) scale(1.02);
  background: rgba(255, 255, 255, 0.12);
  border-color: rgba(255, 255, 255, 0.2);
  box-shadow: 
    0 20px 40px rgba(0, 0, 0, 0.2),
    0 0 0 1px rgba(255, 255, 255, 0.1),
    var(--shadow-glow-lg);
}

.option-card-premium:hover::after {
  left: 100%;
}

.option-icon-premium {
  width: 64px;
  height: 64px;
  border-radius: var(--radius-xl);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all var(--duration-300) var(--ease-bounce);
}

.option-card-premium:hover .option-icon-premium {
  transform: scale(1.1) rotate(5deg);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1));
  box-shadow: 0 8px 25px rgba(255, 255, 255, 0.2);
}

.option-content-premium {
  flex: 1;
  text-align: left;
}

.option-title-premium {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--neutral-0);
  margin-bottom: var(--space-2);
  transition: all var(--duration-200) var(--ease-out);
}

.option-description-premium {
  font-size: 0.875rem;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
  transition: all var(--duration-200) var(--ease-out);
}

.option-card-premium:hover .option-title-premium {
  color: var(--neutral-0);
  transform: translateX(4px);
}

.option-card-premium:hover .option-description-premium {
  color: rgba(255, 255, 255, 0.95);
  transform: translateX(2px);
}

.option-arrow-premium {
  width: 24px;
  height: 24px;
  color: rgba(255, 255, 255, 0.6);
  flex-shrink: 0;
  transition: all var(--duration-300) var(--ease-bounce);
}

/* Premium Theme Toggle */
.theme-toggle.premium {
  display: inline-flex;
  align-items: center;
  gap: var(--space-3);
  padding: var(--space-3) var(--space-5);
  border-radius: var(--radius-xl);
  background: rgba(255, 255, 255, 0.08);
  -webkit-backdrop-filter: var(--backdrop-blur-md);
  backdrop-filter: var(--backdrop-blur-md);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: var(--text-primary);
  font-size: 0.875rem;
  font-weight: 500;
  font-family: var(--font-body);
  cursor: pointer;
  transition: all var(--duration-300) var(--ease-out);
  position: relative;
  overflow: hidden;
}

.theme-toggle.premium::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left var(--duration-500) var(--ease-out);
}

.theme-toggle.premium:hover::before {
  left: 100%;
}

.theme-toggle.premium:hover {
  background: rgba(255, 255, 255, 0.12);
  border-color: rgba(255, 255, 255, 0.2);
  transform: translateY(-2px);
  box-shadow: var(--shadow-glow);
}

.theme-toggle-content {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  position: relative;
  z-index: 2;
}

.theme-icon {
  width: 20px;
  height: 20px;
  transition: all var(--duration-200) var(--ease-out);
}

.theme-toggle.premium:hover .theme-icon {
  transform: scale(1.1) rotate(10deg);
}

.theme-label {
  font-weight: 600;
  letter-spacing: 0.025em;
  transition: all var(--duration-200) var(--ease-out);
}

.theme-indicator {
  position: relative;
  width: 8px;
  height: 8px;
  margin-left: var(--space-2);
}

.indicator {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  transition: all var(--duration-300) var(--ease-out);
}

.indicator.light {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  box-shadow: 0 0 8px rgba(251, 191, 36, 0.4);
}

.indicator.dark {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  box-shadow: 0 0 8px rgba(139, 92, 246, 0.4);
}

/* Theme Toggle Animation Effects */
.theme-toggle.premium.light .theme-icon {
  color: #f59e0b;
}

.theme-toggle.premium.dark .theme-icon {
  color: #8b5cf6;
}

.theme-toggle.premium.system .theme-icon {
  color: var(--text-secondary);
}

@media (max-width: 768px) {
  .theme-toggle.premium {
    padding: var(--space-2) var(--space-4);
  }
  
  .theme-label {
    display: none;
  }
}

/* Premium Responsive Design */
@media (max-width: 1024px) {
  .hero-grid {
    grid-template-columns: 1fr;
    gap: var(--space-12);
    text-align: center;
  }
  
  .hero-text {
    text-align: center;
  }
  
  .hero-title {
    font-size: 3rem;
  }
  
  .container {
    padding: 0 var(--space-5);
  }
  
  .card-grid-premium {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
  }
  
  .classroom-options-premium {
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }
}

@media (max-width: 768px) {
  .hero-title {
    font-size: 2.5rem;
  }
  
  .hero-subtitle {
    font-size: 1.125rem;
  }
  
  .hero-actions {
    justify-content: center;
  }
  
  .nav-content {
    padding: 0 var(--space-4);
  }
  
  .section {
    padding: var(--space-16) 0;
  }
  
  .btn-premium {
    padding: var(--space-3) var(--space-5);
    font-size: 0.875rem;
  }
  
  .option-card-premium {
    padding: var(--space-6);
    min-height: 120px;
  }
  
  .option-icon-premium {
    width: 48px;
    height: 48px;
  }
}

@media (max-width: 480px) {
  .container {
    padding: 0 var(--space-4);
  }
  
  .hero-title {
    font-size: 2rem;
  }
  
  .hero-subtitle {
    font-size: 1rem;
  }
  
  .hero-actions {
    flex-direction: column;
    align-items: center;
  }
  
  .btn-premium {
    width: 100%;
    max-width: 280px;
  }
  
  .card-grid-premium {
    grid-template-columns: 1fr;
  }
  
  .option-card-premium {
    flex-direction: column;
    text-align: center;
    gap: var(--space-4);
  }
  
  .option-content-premium {
    text-align: center;
  }
}

/* Premium Utilities */
.text-gradient-primary {
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.text-gradient-secondary {
  background: var(--gradient-secondary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.text-glow {
  text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
}

.animate-pulse-subtle {
  animation: pulseSubtle 3s ease-in-out infinite;
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}

.animate-rotate-slow {
  animation: rotateSlow 20s linear infinite;
}

.backdrop-blur-subtle {
  -webkit-backdrop-filter: blur(2px);
  backdrop-filter: blur(2px);
}

.border-gradient {
  position: relative;
  border: 1px solid transparent;
  background: linear-gradient(var(--surface-bg), var(--surface-bg)) padding-box,
              var(--gradient-primary) border-box;
}

.shadow-glow-hover {
  transition: box-shadow var(--duration-300) var(--ease-out);
}

.shadow-glow-hover:hover {
  box-shadow: var(--shadow-glow-lg);
}

/* Premium Interactive Elements */
.interactive-premium {
  position: relative;
  cursor: pointer;
  transition: all var(--duration-200) var(--ease-out);
}

.interactive-premium::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: inherit;
  opacity: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), transparent);
  transition: opacity var(--duration-200) var(--ease-out);
  pointer-events: none;
}

.interactive-premium:hover::before {
  opacity: 1;
}

.magnetic-hover {
  transition: transform var(--duration-200) var(--ease-out);
}

.magnetic-hover:hover {
  transform: scale(1.05) translateZ(10px);
}

/* Premium Focus Management */
.focus-visible:focus-visible {
  outline: 2px solid rgba(255, 255, 255, 0.6);
  outline-offset: 2px;
}

.focus-ring:focus {
  box-shadow: 
    0 0 0 3px rgba(255, 255, 255, 0.1),
    var(--shadow-lg);
}

/* Premium Accessibility */
@media (prefers-contrast: high) {
  :root {
    --neutral-0: #ffffff;
    --neutral-900: #000000;
    --primary-500: #0066cc;
  }
  
  .btn-premium {
    border: 2px solid currentColor;
  }
  
  .card-premium {
    border: 2px solid rgba(255, 255, 255, 0.5);
  }
}

@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
  
  .floating-shapes,
  .particles-container {
    display: none;
  }
}

/* Utility Classes */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }
.flex { display: flex; }
.items-center { align-items: center; }
.justify-center { justify-content: center; }
.gap-sm { gap: var(--space-sm); }
.gap-md { gap: var(--space-md); }
.mr-2 { margin-right: 8px; }
.ml-2 { margin-left: 8px; }
.gap-2 { gap: 8px; }

/* Card Component */
.card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  box-shadow: var(--shadow-card);
  border: 1px solid var(--border-light);
  transition: all var(--transition-smooth);
}

.card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-hover);
}

.card-header {
  margin-bottom: var(--space-md);
  padding-bottom: var(--space-sm);
  border-bottom: 1px solid var(--border-light);
}

.card-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--text-color);
  margin: 0;
}

.card-content {
  color: var(--text-secondary);
}

/* Button Styles */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-xs);
  padding: 12px var(--space-md);
  border-radius: var(--radius-md);
  font-size: 14px;
  font-weight: 500;
  font-family: var(--font-body);
  text-decoration: none;
  border: none;
  cursor: pointer;
  transition: all var(--transition-smooth);
  min-height: 44px;
  white-space: nowrap;
}

.btn:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
}

.btn-primary {
  background: var(--bg-button);
  color: var(--text-button);
  box-shadow: var(--shadow-sm);
}

.btn-primary:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
  background: #0056b3;
}

.btn-secondary {
  background: transparent;
  color: var(--text-color);
  border: 1px solid var(--border-color);
}

.btn-secondary:hover {
  background: var(--bg-hover);
  border-color: var(--border-focus);
}

.btn-ghost {
  background: transparent;
  color: var(--text-muted);
  padding: var(--space-xs) var(--space-sm);
}

.btn-ghost:hover {
  background: var(--bg-hover);
  color: var(--text-color);
}

/* Input Styles */
.form-group {
  margin-bottom: var(--space-md);
}

.form-label {
  display: block;
  margin-bottom: var(--space-xs);
  font-size: 14px;
  font-weight: 500;
  color: var(--text-color);
  font-family: var(--font-body);
}

.form-input,
.form-select {
  width: 100%;
  padding: 12px var(--space-sm);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  font-size: 16px;
  font-family: var(--font-body);
  background: var(--bg-input);
  color: var(--text-color);
  transition: all var(--transition-smooth);
}

.form-input:focus,
.form-select:focus {
  outline: none;
  border-color: var(--border-focus);
  box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
}

.form-input::placeholder {
  color: var(--text-muted);
}

/* Grid Layout */
.grid {
  display: grid;
  gap: var(--space-md);
}

.grid-cols-1 { grid-template-columns: repeat(1, 1fr); }
.grid-cols-2 { grid-template-columns: repeat(2, 1fr); }
.grid-cols-3 { grid-template-columns: repeat(3, 1fr); }
.grid-cols-4 { grid-template-columns: repeat(4, 1fr); }

/* Loading States */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(248, 249, 250, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  -webkit-backdrop-filter: blur(4px);
  backdrop-filter: blur(4px);
}

/* Landing Page */
.landing-container {
  min-height: 100vh;
  background: var(--bg-color);
  display: flex;
  flex-direction: column;
}

.landing-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-md) var(--space-xl);
  background: var(--bg-secondary);
  box-shadow: var(--shadow-sm);
  border-bottom: 1px solid var(--border-light);
}

.site-title {
  font-size: 1.75rem;
  font-weight: 700;
  font-family: var(--font-heading);
  color: var(--accent-color);
  text-decoration: none;
}

.header-controls {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.user-button {
  background: var(--bg-button);
  color: var(--text-button);
  border: none;
  padding: 8px var(--space-sm);
  border-radius: var(--radius-md);
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition-smooth);
}

.user-button:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.landing-main {
  flex: 1;
  padding: var(--space-xl) 0;
}

.main-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-2xl);
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--space-xl);
}

/* Classroom Section */
.classroom-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: var(--bg-secondary);
  padding: var(--space-2xl);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-card);
  border: 1px solid var(--border-light);
}

.section-header {
  text-align: center;
  margin-bottom: var(--space-xl);
}

.section-header h1 {
  color: var(--text-color);
  margin-bottom: var(--space-sm);
}

.section-header p {
  color: var(--text-muted);
  font-size: 1.1rem;
}

.classroom-form {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
}

.unified-code-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-sm);
  background: var(--bg-hover);
  border-radius: var(--radius-md);
  border: 1px solid var(--border-light);
}

.code-label {
  font-weight: 500;
  color: var(--text-secondary);
}

.code-value {
  font-family: var(--font-mono);
  font-weight: 600;
  color: var(--accent-color);
  background: rgba(0, 123, 255, 0.1);
  padding: 4px var(--space-xs);
  border-radius: var(--radius-sm);
}

.enter-classroom-btn,
.enter-class-btn {
  padding: var(--space-sm) var(--space-lg);
  font-size: 1rem;
  border-radius: var(--radius-md);
  background: var(--bg-button);
  color: var(--text-button);
  border: none;
  cursor: pointer;
  font-weight: 600;
  font-family: var(--font-body);
  transition: all var(--transition-smooth);
  box-shadow: var(--shadow-md);
  margin-top: var(--space-sm);
}

.enter-classroom-btn:hover,
.enter-class-btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-hover);
  background: #0056b3;
}

.enter-classroom-btn:disabled,
.enter-class-btn:disabled {
  background: var(--primary-color);
  cursor: not-allowed;
  transform: none;
  box-shadow: var(--shadow-sm);
}

.unified-code-box {
  margin-top: var(--space-md);
  padding: var(--space-sm) var(--space-md);
  background: var(--accent-color);
  border-radius: var(--radius-md);
  font-size: 1.1rem;
  color: var(--text-button);
  font-weight: 600;
  box-shadow: var(--shadow-md);
  display: flex;
  gap: var(--space-sm);
